<UserControl x:Class="Digital_twin.UserControls.Edit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Digital_twin.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="70" x:Name="root">
    <Grid>
        <Button HorizontalAlignment="Left" VerticalAlignment="Center" Height="50" Width="70" Click="SetEdit">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding State}" Value="Edit">
                            <Setter Property="Background" Value="#FF3453B5"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Image Source="C:\Users\hliav\Desktop\Edit.png"/>
        </Button>
    </Grid>
</UserControl>
